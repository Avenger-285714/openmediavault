# Links:
# https://github.com/scop/bash-completion

_omv-confdbadm()
{
	local cur words
	_init_completion || return

	case ${words[1]} in
	read|create|delete|update)
  	COMPREPLY=( $( compgen -W "$( command omv-confdbadm list-ids \
  	  2>/dev/null )" -- "$cur" ) )
		return 0
		;;
	*)
		COMPREPLY=( $( compgen -W "create delete exists list-ids migrate populate read update" -- "$cur" ) )
		return 0
		;;
	esac
} &&
complete -F _omv-confdbadm omv-confdbadm
